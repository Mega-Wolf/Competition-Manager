<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.SceneController">
   <top>
      <Label text="Herzlich Willkommen zum Verwaltungsprogramm des diesjährigen Fußballturniers!" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <font>
            <Font size="22.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Label>
   </top>
   <left>
      <VBox prefHeight="505.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#setTeamManagementView" prefHeight="39.0" prefWidth="180.0" text="Teamverwaltung">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button layoutX="20.0" layoutY="20.0" mnemonicParsing="false" onAction="#setGameManagement" prefHeight="39.0" prefWidth="180.0" text="Spielverwaltung">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button layoutX="10.0" layoutY="69.0" mnemonicParsing="false" onAction="#setGame" prefHeight="39.0" prefWidth="180.0" text="Spielplan">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button layoutX="10.0" layoutY="108.0" mnemonicParsing="false" onAction="#setContactView" prefHeight="39.0" prefWidth="180.0" text="Kontakt">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button layoutX="20.0" layoutY="182.0" mnemonicParsing="false" onAction="#setHelpView" prefHeight="39.0" prefWidth="180.0" text="Hilfe">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </left>
</BorderPane>
